{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "paths": {
            "@/*": ["./src/*"],
            "@components": ["./components/index.ts"],
            "@helpers": ["./helpers/index.ts"],
            "@configs/*": ["./configs/*"],
            "@CommonRadio": ["./modules/Common/index.ts"]
        },
        "incremental": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "helpers/**/*.ts",
        "../types.d.ts"
    ],
    "exclude": ["node_modules"]
}
